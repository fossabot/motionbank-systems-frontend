$primary   = #729BFF
$secondary = #665EB8
$tertiary  = #632E62

$neutral   = #E0E1E2
$positive  = #558451
$negative  = #a73e1f
$info      = #156558
$warning   = #ab5921

$dark = #252324
$grey = #3A3739
$faded = #4C494A
$light = #8F898C

$white = #bdb7ba

$border-radius = .35em

// $body-background = #1f1d1e
$body-background = #ffffff
$body-color = $white

$div-background = $red



td
  background transparent!important
  color black
  border-color black!important
  padding .75em .7em!important

th
  color black!important
  // background-color #f3f3f3!important
  background-color transparent!important

tr:last-of-type td
  border-bottom 0!important


.content-wrap
  width 80vw
  float right

.content-bar-item
  color black
  padding .2em .5em
  border-radius .2em
  background-color white
  text-transform uppercase

.q-data-table
  border 0!important

.q-data-table-container
  margin-top 0!important

.search-bar
  box-shadow 0 0 20px 0 rgba( 0, 0, 0, .2 )
  padding .2em .5em
